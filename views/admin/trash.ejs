              <td><%= page.deleted_by || '‚Äî' %></td>
              <td>
                <% if (page.tags && page.tags.length) { %>
                  <div class="tags-row">
                    <% page.tags.forEach(tag => { %>
                      <span class="tag"><%= tag %></span>
                    <% }) %>
                  </div>
                <% } else { %>
                  <span class="text-muted">Aucun</span>
                <% } %>
              </td>
              <td>
                <div class="trash-row-actions">
                  <form
                    method="post"
                    action="/admin/trash/<%= page.snowflake_id %>/restore"
                    onsubmit="return confirm('Restaurer cette page ?');"
                  >
                    <%- include('../partials/csrf_field') %>
                    <button class="btn success btn-compact" data-icon="‚ôªÔ∏è" type="submit">Restaurer</button>
                  </form>
                  <form
                    method="post"
