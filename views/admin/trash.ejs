            <th>Titre</th>
            <th>Slug</th>
            <th>Supprim√©e le</th>
            <th>Supprim√© par</th>
            <th>Tags</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% trashedPages.forEach(page => { %>
            <tr>
              <td>
                <div class="table-title"><strong><%= page.title || 'Sans titre' %></strong></div>
                <div class="table-meta text-muted">
                  Cr√©√©e le <%= page.created_at ? new Date(page.created_at).toLocaleString(lang === 'en' ? 'en-US' : 'fr-FR') : '‚Äî' %>
